<section id="carts" class="main-poems--container">
    <div class="poems-container--title">
        <h3>Un poco de lo mucho que siento por ti.</h3>
    </div>
    <% for(poem of poems) { %>
      <button class="poem" data-toggle="modal" data-target="#mod<%= poem.id%>">
          <h2><%= poem.title%></h2>
          <p><%= poem.content%></p>
      </button>


      <!-- Modal -->
      <div class="modal fade" id="mod<%= poem.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </button>
                  </div>
                  <div class="modal-body">
                    <div class="d-flex flex-column">
                        <a href="/delete/<%= poem.id%>" class="btn btn-dark mb-2">Delete</a>
                        <button class="btn btn-dark" data-toggle="modal" data-target="#modal<%= poem.id%>">Edit</button>
                    </div>
                  </div>
              </div>
          </div>
      </div>


      <!-- Modal -->
      <div class="modal fade" id="modal<%= poem.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </button>
                  </div>
                  <div class="modal-body">
                      <form id="form_register" action="/edit/<%= poem.id%>" method="POST">
                          <div class="d-flex flex-column">
                              <label for="title">TÃ­tulo:</label>
                              <input type="text" class="form-control mb-2" id="title" name="title" value="<%= poem.title%>">
                              <label for="content">Contenido:</label>
                              <textarea type="text" class="form-control mb-4" id="content" name="content" rows="10" ><%= poem.content%></textarea>
                              <button type="submit" class="btn btn-dark ml-2">Editar</button>
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </div>


    <% } %>
    <button class="add-button" data-toggle="modal" data-target="#mod1">Write</button>
</section>